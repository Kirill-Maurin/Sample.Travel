<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <LangVersion>latest</LangVersion>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <BaseIntermediateOutputPath>$(SolutionDir).build\obj\$(MSBuildProjectName)\</BaseIntermediateOutputPath>
    <OutputPath>$(SolutionDir)\.build\$(Configuration)\</OutputPath>
    <OutDir>$(OutputPath)</OutDir>
    <UseCommonOutputDirectory>True</UseCommonOutputDirectory>  
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" Version="1.5.0" />
    <PackageReference Include="System.Reactive" Version="4.0.0" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.0" />
  </ItemGroup>
  <Choose>
    <When Condition="$(MSBuildProjectName.EndsWith('BenchmarkDotNet.Autogenerated'))">
      <PropertyGroup>
        <TargetFrameworks>netcoreapp2.0</TargetFrameworks>
      </PropertyGroup>
    </When>
    <When Condition="$(MSBuildProjectName.EndsWith('Benchmarks'))">
      <PropertyGroup>
        <TargetFrameworks>netcoreapp2.0</TargetFrameworks>
        <Configuration>Release</Configuration>
        <OutputType>Exe</OutputType>
      </PropertyGroup>
      <ItemGroup>
        <PackageReference Include="BenchmarkDotNet" Version="0.10.14" />
      </ItemGroup>
    </When>
    <When Condition="$(MSBuildProjectName.EndsWith('Tests'))">
      <PropertyGroup>
        <TargetFrameworks>netcoreapp2.0</TargetFrameworks>
        <OutputType>Exe</OutputType>
      </PropertyGroup>
      <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.7.2" />
        <PackageReference Include="FluentAssertions" Version="5.3.2" />
        <PackageReference Include="NSubstitute" Version="3.1.0" />
        <PackageReference Include="xunit" Version="2.3.1" />
        <PackageReference Include="xunit.runner.visualstudio" Version="2.3.1" />
      </ItemGroup>
    </When>
    <When Condition="$(MSBuildProjectName.EndsWith('Console'))">
      <PropertyGroup>
        <TargetFrameworks>netcoreapp2.0</TargetFrameworks>
        <OutputType>Exe</OutputType>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <TargetFrameworks>netstandard2.0</TargetFrameworks>
      </PropertyGroup>
      <ItemGroup>
        <PackageReference Include="NullGuard.Fody" Version="1.8.0" />
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>